#!/usr/bin/env bash
# Bash script to install and configure Nginx on Ubuntu
# Update package list and install Nginx
sudo apt-get update
sudo apt-get install nginx
sudo utw allow 'Nginx HTTP'

# Create a default HTML page with "Hello World!"
sudo sh -c 'echo "Hello World!" | sudo tee /var/www/html/index.html'

# test Nginx configs
sudo nginx -t
# Restart Nginx
sudo service nginx reload
