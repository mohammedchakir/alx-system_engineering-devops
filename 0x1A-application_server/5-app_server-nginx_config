# Nginx configurations route /airbnb-onepage/ from AirBnB_clone_v4

server {
    # Listen on port 80
    listen      80 default_server;
    listen      [::]:80 default_server;

    # DNS of the IP adresse-server
    server_name 34.202.159.64

    # HTTP response header
    add_header  X-Served-By 469212-web-01;

    # /airbnb-onepage/ route from AirBnB_clone_v3
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # /number_odd_or_even/ route on AirBnB_clone_v3
    location ~ /airbnb-dynamic/number_odd_or_even/(\d+)$ {
        proxy_pass http://127.0.0.1:5001/number_odd_or_even/$1;
    }

    # API on AirBnB_clone_v3
    location /api {
        proxy_pass http://127.0.0.1:5002/api;
    }

    # /2-hbnb route of AirBnB_clone_v4
    location / {
        proxy_pass http://127.0.0.1:5003/2-hbnb;
    }

    # Display static content for AirBnB_clone_v4
    location /static {
        alias web_dynamic/static/;
    }

    # page 404 error
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
